alias ld="ls -ld */"   # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
# Recursively remove .DS_Store files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

# quickly access config files
alias bashrc="vim $(readlink ~/.bashrc)"
alias zshrc="vim $(readlink  ~/.zshrc)"
alias vimrc="vim $(readlink ~/.vimrc)"
alias aliasrc="vim ~/.dotfiles/shell/sys/alias"
alias pathrc="vim ~/.dotfiles/shell/sys/path"

source ~/.dotfiles/extra/alias
