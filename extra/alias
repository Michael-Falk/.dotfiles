
alias vim='/usr/local/bin/vim'

# I want to use python3 by default but reflexively use python
alias python="python3"
alias upgrade_pip="pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U"

# Quick cd to development directory
alias Development='cd ~/Documents/Development/'
alias dev=Development

# Quick cd to Georgia Tech class folders
alias cs4650="cd ~/Documents/Georgia\ Tech/CS4650"
alias nlp="cs4650; workon nlp; ipython notebook"
